@page
@model AuthServer.Pages.AuthenticationModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- âœ… CSS LINKS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/microsoft-avant" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f2f5;
        }

        .login-form {
            max-width: 420px;
            margin: 60px auto;
            padding: 2rem;
            background: #fff;
            border-radius: 0.75rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .login-form .form-label {
            font-weight: 600;
        }

        .login-form .form-control {
            padding: 0.75rem;
            font-size: 1rem;
        }

        .login-form .btn {
            font-weight: 600;
        }

        .login-form a.btn {
            width: 100px;
            justify-content: center;
            font-size: 0.9rem;
            padding: 0.5rem 0.75rem;
            white-space: nowrap;
        }

        h2.login-title {
            font-family: 'Corbel Light', 'Corbel', sans-serif;
            letter-spacing: 0.5px;
        }

        .submit-button {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
<div class="container-fluid">
    <form method="post" class="login-form p-4 bg-white rounded shadow"
        style="min-width: 500px; min-height: 300px;margin: 60px auto;">
        <h2 class="text-center mb-4 login-title">LOGIN</h2>

        @if (!string.IsNullOrEmpty(Model.AuthStatus))
        {
            <div class="alert alert-danger text-center">@Model.AuthStatus</div>
        }

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-person-fill"></i>
                </span>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-key-fill"></i>
                </span>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
            </div>
        </div>

        <div class="container-fluid submit-button">
            <button type="submit" class="btn btn-outline-dark" style="width: 60%;">Log in</button>
        </div>

        <h2 class="text-center login-title">or</h2>

        <div class="d-flex justify-content-center gap-2 mt-3">
            <a href="#" class="btn btn-outline-danger d-flex align-items-center gap-1">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google" width="18" height="18"> Google
            </a>

            <a href="#" class="btn btn-dark d-flex align-items-center gap-1">
                <i class="bi bi-github"></i> GitHub
            </a>

            <a href="#" class="btn btn-primary d-flex align-items-center gap-1">
                <i class="bi bi-facebook"></i> Facebook
            </a>
        </div>
    </form>

    <div class="text-center mt-3">
        <a href="#">Forgot password?</a>
    </div>
    <div class="text-center mt-2">
        <span>Don't have an account? <a href="/Home/Signup">Sign up</a></span>
    </div>
</div>
</body>