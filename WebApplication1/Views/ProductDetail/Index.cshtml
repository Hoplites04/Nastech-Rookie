@{
    ViewData["Title"] = "Product";
}

@model SharedViewModels.ClientViewModels.PhoneDetailModel

@section Styles {
    <style>
        .product-name {
            font-family: 'Microsoft Avant', sans-serif;
            letter-spacing: -0.5px;
            color: #000;
        }

        .brand-name {
            font-family: 'Poppins', sans-serif;
            letter-spacing: -0.5px;
            color: #000;
        }

        .custom-label {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            font-size: 1.1rem;
            color: #111;
            letter-spacing: 0.25px;
        }

        .brand-badge {
            display: flex;
            justify-content: start;
            /* or center if you want it centered */
            margin-top: 0.5rem;
            margin-bottom: 1rem;
        }

        .brand-button {
            background-color: transparent;
            border: none;
            padding: 0;
            border-radius: 12px;
            /* full rounded */
            overflow: hidden;
            width: 200px;
            /* adjust size */
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: default;
            box-shadow: 2px 2px 2px;
        }

        .brand-logo {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
        }

        .overlay-blur {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            backdrop-filter: blur(6px);
            background-color: rgba(0, 0, 0, 0.3);
            z-index: 1000;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .spec-card {
            display: block;
            background: white;
            padding: 3%;
            border-radius: 8px;
            max-width: 800px;
            width: 90%;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .spec-header {
            font-family: 'Inter', sans-serif;
            justify-items: center;
            margin-bottom: 4%;
        }

        .spec-table tbody tr td {
            font-family: 'Inter', sans-serif;
            color: gray !important
        }

        .spec-table thead tr td {
            font-family: 'Inter', sans-serif;
            font-weight: 400;
            font-size: larger;
        }

        .d-none {
            display: none !important;
        }

        .overlay-close-btn {
            position: absolute;
            top: 1%;
            right: 2%;
            font-size: 30px;
            background: transparent;
            border: none;
            color:black;
            font-weight: bold;
            cursor: pointer;
            z-index: 1001;
            transition: color 0.2s;
        }

        .overlay-close-btn:hover {
            color: #ff4d4d;
        }
    </style>
}

<div class="container my-5">

    <div class="row">
        <!-- Carousel Section with Fixed Box -->
        <div class="col-md-7 d-flex justify-content-start align-items-start">
            <div id="productCarousel" class="carousel slide border rounded" data-bs-ride="carousel"
                style="width: 620px; height: 466px; background-color: #f8f9fa;">
                <div class="carousel-inner d-flex align-items-center " style="height: 100%; width: 100%">
                    <div class="carousel-item active text-center">
                        <img src="~/assets/Phone images/THUMB_Galaxy-S25ultra-Media-Asset-Thumb-1440x960.jpg"
                            class="object-fit: scale-down"
                            style="max-height: 100%; max-width: 100%; object-fit: contain;" alt="Image 1">
                    </div>
                    <div class="carousel-item text-center">
                        <img src="~/assets/Phone images/THUMB_Galaxy-S25ultra-Media-Asset-Thumb-1440x960.jpg"
                            class="object-fit: scale-down"
                            style="max-height: 100%; max-width: 100%; object-fit: contain;" alt="Image 2">
                    </div>
                    <div class="carousel-item text-center">
                        <img src="~/assets/Phone images/THUMB_Galaxy-S25ultra-Media-Asset-Thumb-1440x960.jpg"
                            class="object-fit: scale-down"
                            style="max-height: 100%; max-width: 100%; object-fit: contain;" alt="Image 3">
                    </div>
                </div>

                <!-- Navigation Buttons -->
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" style="background-color:black;"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" style="background-color:black;"></span>
                </button>
            </div>
        </div>


        <!-- Info Section -->
        <div class="col-md-5" style="justify-content: start;">
            <p class="product-name" style="font-size: xx-large;">Galaxy S25 Ultra</p>
            @* <div class="brand-badge mt-2">
                <button type="button" class="brand-button" disabled>
                    <img src="~/assets/Phone images/Samsung_lettermark/Blue/Samsung_Orig_Wordmark_BLUE_RGB.jpg"
                        alt="Brand" class="brand-logo">
                </button>
            </div> *@
            <p style="font-size: large;">@Model.BrandName</p>

            <div class="mb-3">
                <label class="form-label custom-label">Choose Storage:</label>
                <div class="d-flex gap-2 btn-group" role="group" aria-label="Storage Options">
                    @foreach (var storage in Model.AvailableStorages)
                    {
                        <button class="btn btn-outline-dark">@storage</button>
                    }
                </div>  
            </div>

            <div class="mb-3">
                <label class="form-label custom-label">Choose Color:</label>
                <div class="d-flex gap-2">
                    @foreach (var color in Model.AvailableColors.Distinct())
                    {
                        <button class="btn btn-outline-dark">@color</button>
                    }
                    <button class="btn btn-primary" onclick="showSpec()">View Specification</button>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- SPECIFICATION OVERLAY -->
<div id="spec-overlay" class="overlay-blur d-none">
    <div class="spec-card position-relative">
        <button class="overlay-close-btn" onclick="hideSpec()">Ã—</button>
        <div class="spec-header border-bottom">
            <h4>Specification</h4>
        </div>
        <div class="card-body">
            <div class="container-fluid">
                <table class="table table-sm spec-table">
                    <thead>
                        <tr>
                            <td>Details</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Weight</td>
                            <td>1.5 kg</td>
                        </tr>
                        <tr>
                            <td>Dimensions</td>
                            <td>10 x 20 x 30 cm</td>
                        </tr>
                        <tr>
                            <td>Material</td>
                            <td>Aluminum</td>
                        </tr>
                        <tr>
                            <td>Color</td>
                            <td>Black</td>
                        </tr>
                    </tbody>
                </table>
                <button class="btn btn-danger mt-3" onclick="hideSpec()">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        function showSpec() {
            document.getElementById('spec-overlay').classList.remove('d-none');
        }

        function hideSpec() {
            document.getElementById('spec-overlay').classList.add('d-none');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

}
