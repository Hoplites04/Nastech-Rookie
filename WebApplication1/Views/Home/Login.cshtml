@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f2f5;
        }

        .login-form {
            max-width: 420px;
            margin: 60px auto;
            padding: 2rem;
            background: #fff;
            border-radius: 0.75rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .login-form .form-label {
            font-weight: 600;
        }

        .login-form .form-control {
            padding: 0.75rem;
            font-size: 1rem;
        }

        .login-form .btn {
            font-weight: 600;
        }

        .login-form a.btn {
            width: 100px;
            justify-content: center;
            font-size: 0.9rem;
            padding: 0.5rem 0.75rem;
            white-space: nowrap;
        }

        h2.login-title {
            font-family: 'Corbel Light', 'Corbel', sans-serif;
            letter-spacing: 0.5px;
        }
        .submit-button {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            margin-bottom: 10px;
        }

    </style>
}



<div class="container-fluid ">
    <form method="post" action="/Login/Index" class="login-form p-4 bg-white rounded shadow"
        style="min-width: 500px; min-height: 300px;margin: 60px auto;">
        <h2 class="text-center mb-4 login-title">LOGIN</h2>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-person-fill"></i>
                </span>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email"
                    required>
            </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-key-fill"></i>
                </span>
                <input type="password" class="form-control" id="password" name="password"
                    placeholder="Enter your password" required>
            </div>
        </div>
        <div class="container-fluid submit-button">
            <button type="submit" class="btn btn-outline-dark" style="width: 60%;">Next</button>
        </div>
        <h2 class="text-center login-title">or</h2>
        <div class="d-flex justify-content-center gap-2 mt-3">
            <!-- Google -->
            <a href="#" class="btn btn-outline-danger d-flex align-items-center gap-1">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google"
                    width="18" height="18">
                Google
            </a>

            <!-- GitHub -->
            <a href="#" class="btn btn-dark d-flex align-items-center gap-1">
                <i class="bi bi-github"></i>
                GitHub
            </a>

            <!-- Facebook -->
            <a href="#" class="btn btn-primary d-flex align-items-center gap-1">
                <i class="bi bi-facebook"></i>
                Facebook
            </a>
        </div>

    </form>
    <div class="text-center mt-3">
        <a href="#">Forgot password?</a>
    </div>
    <div class="text-center mt-2">
        <span>Don't have an account? <a href="/Home/Signup">Sign up</a></span>
    </div>
</div>
