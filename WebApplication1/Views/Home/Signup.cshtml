@{
    ViewData["Title"] = "Signup";
}

@section Styles {
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f2f5;
        }

        .signup-form {
            
            max-width: 100%;
            margin-left: 25%;
            margin-right: 25%;
            padding: 4%;
            background: #fff;
            border-radius: 0.75rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .signup-form .form-label {
            font-weight: 600;
        }

        .signup-form .form-control {
            padding: 0.75rem;
            font-size: 1rem;
        }

        .signup-form .btn {
            font-weight: 600;
        }

        h2.signup-title {
            font-family: 'Corbel Light', 'Corbel', sans-serif;
            letter-spacing: 0.5px;
        }

        .submit-button {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
    </style>
}

<div class="container-fluid">
        <form method="post" action="/Register/Submit" class="signup-form rounded shadow">
            <h2 class="text-center mb-4 signup-title">SIGNUP</h2>

            <!-- Full Name -->
            <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Your full name" required>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email"
                    required>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password"
                    placeholder="Create a password" required>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                    placeholder="Repeat your password" required>
            </div>

            <!-- Submit Button -->
            <div class="submit-button">
                <button type="submit" class="btn btn-outline-dark" style="width: 60%;">Create account</button>
            </div>
        </form>


</div>
