                <!-- Product Section -->
                <div class="col-24 col-sm-9">
                    <div class="product-section">
                        <!-- Product session -->
                        <section class="container pb-4">

                            @await Component.InvokeAsync("ProductList")

                            @* <!-- One Product Row -->
                            <div class="row g-4 justify-content-start">
                                <!-- One Product Card -->
                                <div class="col-6 col-md-4 col-lg-3">
                                    <div class="card text-center shadow-sm border-0 hover-card">
                                        <img src="~/assets/Phone images/15_2_7_2_5.webp"
                                            class="img-fluid mx-auto d-block"
                                            style="width: 179px; height: 179px; object-fit: cover;" alt="Phone">
                                        <div class="card-body">
                                            <h6 class="card-title">Phone Name</h6>
                                            <p class="card-text">$399</p>
                                        </div>
                                    </div>
                                </div> 
                                <!-- One Product Card -->
                            </div>
                            <!-- One Product Row --> *@

                        </section>
                        <!-- Product session -->
                    </div>
                </div>
            </div>

@section Scripts {
<script>
document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("brandFilterForm");
    if (!form) return;

    form.addEventListener("change", async function (e) {
        e.preventDefault();

        const params = new URLSearchParams(new FormData(form));
        const url = `/?${params.toString()}`;

        // ✅ Record current scroll position
        const scrollY = window.scrollY;

        try {
            const response = await fetch(url, {
                headers: {
                    "X-Requested-With": "XMLHttpRequest"
                }
            });

            if (response.ok) {
                const html = await response.text();
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, "text/html");
                const newList = doc.getElementById("product-list");

                if (newList) {
                    const currentList = document.getElementById("product-list");
                    currentList.innerHTML = newList.innerHTML;

                    // ✅ Restore scroll position to avoid visual jump
                    window.scrollTo({ top: scrollY, behavior: "auto" });
                }
            }
        } catch (err) {
            console.error("AJAX error", err);
        }
    });
});
</script>
}